{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2022",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
  }
}
